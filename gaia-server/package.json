    "@types/node": "12.12.2",
    "aedes": "^0.46.0",
    "aedes-server-factory": "^0.1.2",
    "apollo-server": "^2.22.2",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "graphql-modules": "^1.4.2",
    "graphql-request": "^3.4.0",
    "mongodb": "^3.6.6",
    "mqtt": "^4.2.6",
    "reflect-metadata": "^0.1.13"
  }
