{
  "name": "gaia-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prodServer": "export NODE_ENV=prod && npm run start",
    "devServer": "export NODE_ENV=dev && npm run liveServer",
    "liveServer": "nodemon -e '*.ts, *.json' --exec npm run start",
    "start": "npx tsc && node -r dotenv/config ./dist/main.js",
    "debug-server": "nodemon --inspect -e '*.ts, *.json' --exec npm run start",
    "lint": "eslint --quiet **/src/**/*.ts",
    "fixLint": "eslint --fix --quiet **/src/**/*.ts",
    "generate-types": "graphql-codegen",
    "docker": "docker build . --tag pigtastic/gaia-server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@types/mongodb": "^3.6.12",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.2",
