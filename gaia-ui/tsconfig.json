{
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "module": "es2020",
      "declaration": false,
      "target": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "es2018",
        "dom",
        "esnext.asynciterable"
      ],
      "paths": {
          "@src/*": [
              "src/*.android.ts",
              "src/*.ios.ts",
              "src/*.tns.ts",
              "src/*.web.ts",
              "src/*.ts",
              "src/*.graphql"
          ]
      },
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["src/@types","node_modules/@types"]
  }
}
